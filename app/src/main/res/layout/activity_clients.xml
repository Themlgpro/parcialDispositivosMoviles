<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parcial.appsmoviles.parcial.ClientsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">


                <android.support.design.widget.TabLayout
                    android:id="@+id/menu"
                    android:layout_width="394dp"
                    android:layout_height="wrap_content"
                    >

                    <android.support.design.widget.TabItem
                        android:id="@+id/Listado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="?android:attr/actionModeFindDrawable"

                        android:text="LIstado" />

                    <android.support.design.widget.TabItem
                        android:id="@+id/Crear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@android:drawable/ic_input_add"
                        android:text="Crear" />

                    <android.support.design.widget.TabItem
                        android:id="@+id/volver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="?attr/actionModeCloseDrawable"
                        android:text="Volver productos" />


                </android.support.design.widget.TabLayout>


            </android.support.design.widget.AppBarLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/clientesLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
